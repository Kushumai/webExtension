{
    "manifest_version": 3,
    "name": "Mon Extension Chrome",
    "version": "1.0",
    "description": "Une extension personnalis√©e pour la page nouvel onglet de Chrome",
    "permissions": ["storage", "scripting", "webRequest", "activeTab","geolocation"],
    "optional_permissions": ["topSites"],

    "chrome_url_overrides": {
      "newtab": "newtab/newtab.html"
    },
    "icons": {
      "128": "img/icon128.png",
      "48": "img/icon48.png",
      "16": "img/icon16.png"   
     },
     "action": {
      "default_icon": {
        "128": "img/icon128.png",
        "48": "img/icon48.png",
        "16": "img/icon16.png"
      },
      "default_popup" : "popup/popup.html",
      "default_title": "Pas touche !",
      "default_badge_color": "FF0000"
    }
    
}